{
    "id": "io.github.flattool.Warehouse",
    "runtime": "org.gnome.Platform",
    "runtime-version": "47",
    "sdk": "org.gnome.Sdk",
    "command": "warehouse",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--talk-name=org.freedesktop.Flatpak",
        "--filesystem=/var/lib/flatpak/:ro",
        "--filesystem=~/.local/share/flatpak/:ro",
        "--filesystem=~/.var/app/"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "blueprint-compiler",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
                    "tag": "v0.14.0"
                }
            ],
            "cleanup": ["*"]
        },
        {
            "name": "warehouse",
            "builddir": true,
            "buildsystem": "meson",
            "config-opts": [ "-Dprofile=default" ],
            "sources": [
                {
                    "type": "git",
                    "tag": "2.0.0-beta",
                    "commit": "0ad5dca8d68e9223ed0026037e0342407f444030",
                    "url": "https://github.com/flattool/warehouse.git"
                }
            ]
        }
    ]
}
